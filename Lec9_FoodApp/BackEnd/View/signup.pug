  body
   include header.pug
   block content
    .login-box
        h1 SIGNUP
        .textbox
            i.fas.fa-user
            input#name(type='text' placeholder='Username')
        .textbox
            i.fas.fa-envelope-open-text
            input#email(type='email' placeholder='Email Address')
        .textbox
            i.fas.fa-lock
            input#pass(type='password' placeholder='Password')
        .textbox
            i.fas.fa-lock
            input#cpass(type='password' placeholder='Confirm Password')
        .textbox
            i.fa.fa-users(aria-hidden='true')
            select#role(name='role')
                option#place(value='' disabled='' selected='') Select your role
                option(value='admin') Admin
                option(value='user') User
                option(value='restaurant owner') Restaurant-Owner
                option(value='delievery boy') Delievery Boy
        input.btn.sub(type='button' value='Sign Up')
        block scripts
            script(src="./js/signup.js")
   include footer.pug
  